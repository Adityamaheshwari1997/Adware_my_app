<%= render "layouts/flash" %>
<h1>Login</h1>
		<%= form_for :session, url: sessions_create_path do |f| %>
		
			<%= f.label :email %><br>
			<%= f.email_field :email %> <br><br>

			<%= f.label :password %><br>
			<%= f.password_field :password %><br><br>
			
			<%= f.submit "Login"%>
		<% end %>
	<p>New user? <%= link_to "Sign up now!", new_user_path %></p>
<%= link_to "Back", root_path %>


	